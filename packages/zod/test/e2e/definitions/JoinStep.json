{
	"$schema": "https://json-schema.org/draft-07/schema",
	"type": "object",
	"$id": "JoinStep",
	"title": "JoinStep",
	"properties": {
		"joinType": {
			"$ref": "#/definitions/JoinType",
			"default": "INNER"
		},
		"leftKey": {
			"$ref": "#/definitions/JoinKey"
		},
		"rightKey": {
			"$ref": "#/definitions/JoinKey"
		},
		"leftAttributes": {
			"$ref": "#/definitions/SelectedAttributes"
		},
		"rightAttributes": {
			"$ref": "#/definitions/SelectedAttributes"
		}
	},
	"definitions": {
		"JoinType": {
			"enum": ["LEFT", "RIGHT", "INNER", "OUTER"],
			"enumDescriptions": {
				"LEFT": "left join",
				"RIGHT": "right join",
				"INNER": "inner join",
				"OUTER": "outer join"
			}
		},
		"JoinKey": {
			"type": "object",
			"properties": {
				"value": {
					"type": "string"
				},
				"isExpression": {
					"type": "boolean",
					"default": false
				}
			}
		},
		"SelectedAttributes": {
			"type": "object",
			"properties": {
				"attributes": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"useAllAttributes": {
					"type": "boolean",
					"default": false
				}
			}
		}
	}
}
